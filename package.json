{
  "name": "vinext-monorepo",
  "private": true,
  "scripts": {
    "build": "pnpm --filter vinext run build",
    "test": "vitest run",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "test:watch": "vitest",
    "generate:google-fonts": "node scripts/generate-google-fonts.js",
    "typecheck": "tsgo --noEmit",
    "lint": "oxlint --deny-warnings",
    "test:e2e": "playwright test",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@mdx-js/react": "^3.1.1",
    "@mdx-js/rollup": "^3.1.1",
    "@unpic/react": "^1.0.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@typescript/native-preview": "^7.0.0-dev.20260213.1",
    "@vitejs/plugin-rsc": "^0.5.19",
    "image-size": "2.0.2",
    "lint-staged": "^16.3.0",
    "oxfmt": "^0.35.0",
    "oxlint": "^1.47.0",
    "playwright": "^1.52.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.7.0",
    "vite": "^7.3.1",
    "vitest": "^3.2.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "oxfmt --no-error-on-unmatched-pattern"
  },
  "packageManager": "pnpm@10.30.0",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "next",
        "webpack"
      ]
    },
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild",
      "sharp",
      "workerd",
      "@parcel/watcher",
      "@swc/core"
    ]
  }
}
